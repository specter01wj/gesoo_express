

    <div  class="container changepassword-page">

      <form name="changepasswordForm" class="form-signin" id="form-changepassword"> 

        <h2 class="form-signin-heading gesoo-login"><img src="../../media/g.png" alt="Gesoo Express"></h2>

        <div class="form-group changepassword-label">
            <label>用户名:</label>
            <input name="username" type="text" id="user-name" class="form-control" value="{{user.username}}" placeholder="Username" required>
        </div>

        <div class="form-group changepassword-label">
            <label>旧密码:</label>
            <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Old Password" required>
        </div>

        <div class="form-group changepassword-label">
            <label>新密码:</label>
            <input name="password" type="password" id="repeatPassword" class="form-control" placeholder="New Password" required>
        </div>

        <button class="btn btn-lg btn-primary gesoo-blue" id="order-btn-submit" type="submit">更改</button>
        
        <button class="btn btn-lg btn-primary btn-block gesoo-red" id="order-btn-cancel" type="submit">取消</button>

        <!-- <button id="submit-btn" class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button> -->
      </form>

    </div> <!-- /container -->


