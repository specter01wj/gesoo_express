<div class="container orderedit-page">  
    <div id="form">
      <form  name="editForm" id="register_form" class="float-label" spellcheck="false">
        <fieldset id="order-details">
          {{#if order.objectId}}
          <legend class="modal-legend">编辑订单</legend>
          {{else}}
          <legend class="modal-legend">添加订单</legend>
          <div class="row ordertype-label">
              <label><input type="radio" name="order_type" value="0" />送货单</label>
              <label><input type="radio" name="order_type" value="1" />取货单</label>
               <!-- <select name="order_type" id="order_type" class="form-control">
                   <option value="0">送货单</option>
                   <option value="1">取货单</option>
               </select> -->
          </div>
          {{/if}}
         
          <div class="row orderedit-row">
            <div class="control col-xs-6 orderedit-line">
              <input type="text" name="name" placeholder="姓名" value="{{order.customerName}}" required />
              <span class="label" id="name">姓名</span>
            </div>
            <div class="control col-xs-6 orderedit-line">
              <input type="text" name="orderid" placeholder="订单号" value="{{order.orderId}}" />
              <span class="label" id="orderid">订单号</span>
            </div>
          </div>
         
          <div class="row orderedit-row">
            <div class="control col-xs-6 orderedit-line">
                <input type="text" name="street" placeholder="地址" value="{{order.address}}" required />
                <span class="label" id="street" for="street">地址</span>
            </div>
            <!-- <div class="control col-xs-3">
                    <input type='text' name="date_pickup" class='form-control' id='pickup_time' placeholder="取货时间" value="{{order.pickupTime}}" required />
                    <span class="label" id="date_pickup" for="date_pickup">最迟取货时间</span>
            </div>
            <div class="control col-xs-3">
                    <input type='text' name="date_delivery" class='form-control' id='delivery_time' placeholder="送货时间" value="{{order.deliveryTime}}" required />
                    <span class="label" id="date_delivery" for="date_delivery">最迟到达时间</span>
            </div> -->
          </div>
          
          <div class="row orderedit-row">
            <div class="control col-xs-6 orderedit-line">
              <input type="text" name="city" placeholder="城市" value="{{order.city}}" required />
                <span class="label" id="city" for="city">城市</span>
            </div>
            <div class="control col-xs-3 orderedit-line">
              <select name="state" class="select-state">
                <option name="state" value="{{order.state}}">{{order.state}}</option>
                  {{#each states}}
                    <option name="state" value={{this.abb}}> {{this.abb}} {{this.name}}</option>
                  {{/each}}      
              </select>
              <span class="label" id="state" for="state">州</span>
              
            </div>
            <div class="control col-xs-3 orderedit-line">
              <input type="text" name="zip" placeholder="邮编" value="{{order.zipcode}}" required />
                <span class="label" id="zip" for="zip">邮编</span>
            </div>
          </div>

          <div class="row orderedit-row">
            <div class="control col-xs-5 orderedit-line">
              <input id="phone" type="text" name="tel" placeholder="电话" value="{{order.customerPhone}}" required />
                <span class="label" id="tel" for="tel">电话</span>
            </div>
            <!-- <div class="control col-xs-4">
              <span class="checkbox-inline"><input type="checkbox" name="sign" />是否签收</span>
            </div> -->
          </div>

        </fieldset>
        
        
      </form>

        <div class="options">
            {{#if order.objectId}}
            <button class="btn btn-lg btn-primary gesoo-blue" id="order-btn-submit" type="submit">更新</button>
            {{else}}
            <button class="btn btn-lg btn-primary gesoo-blue" id="order-btn-submit" type="submit">添加</button>
            {{/if}}
            <button class="btn btn-lg btn-primary btn-block gesoo-red" id="order-btn-cancel" type="submit">取消</button>
        </div>
      
    </div>
    
</div>
